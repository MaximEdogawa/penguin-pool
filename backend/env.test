# Backend Test Environment Configuration

# Server Ports
HTTP_PORT=3001
WS_PORT=3002

# Environment
NODE_ENV=test

# KurrentDB Configuration
KURRENTDB_URL=http://localhost:2113
KURRENTDB_HOST=127.0.0.1
KURRENTDB_PORT=2113
KURRENTDB_API_KEY=test-key
KURRENTDB_SECRET_KEY=test-secret
KURRENTDB_USE_TLS=false
KURRENTDB_VERIFY_CERT=false


# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Feature Flags - Backend Features
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_HEALTH_CHECKS=true
FEATURE_RATE_LIMITING=false
FEATURE_CORS=true
FEATURE_COMPRESSION=false
FEATURE_HELMET=false
FEATURE_SWAGGER=false
FEATURE_LOGGING=true

# Feature Flags - Database Features
FEATURE_KURRENTDB_ENABLED=true
FEATURE_DATABASE_MIGRATIONS=false
FEATURE_DATABASE_BACKUP=false
FEATURE_DATABASE_MONITORING=false

# Feature Flags - API Features
FEATURE_API_VERSIONING=true
FEATURE_API_DOCUMENTATION=true
FEATURE_API_VALIDATION=true
FEATURE_API_ERROR_HANDLING=true

# Feature Flags - Security Features
FEATURE_AUTHENTICATION=true
FEATURE_AUTHORIZATION=false
FEATURE_ENCRYPTION=false
FEATURE_SESSION_MANAGEMENT=true

# Logging Configuration
LOG_LEVEL=error
LOG_FORMAT=simple
LOG_FILE=logs/test.log

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=10000
KEEP_ALIVE_TIMEOUT=2000
