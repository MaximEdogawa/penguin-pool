{
  "name": "penguin-pool",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite --mode dev",
    "dev:test": "vite --mode test",
    "dev:staging": "vite --mode staging",
    "dev:production": "vite --mode production",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:dev": "vite build --mode dev",
    "build:test": "vite build --mode test",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "preview": "vite preview",
    "preview:dev": "vite preview --mode dev",
    "preview:test": "vite preview --mode test",
    "preview:staging": "vite preview --mode staging",
    "preview:production": "vite preview --mode production",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "lint:check": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "format": "prettier --write \"**/*.{vue,js,ts,jsx,tsx,json,css,md,html,scss,sass,less}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{vue,js,ts,jsx,tsx,json,css,md,html,scss,sass,less}\" --ignore-path .prettierignore",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "kill-backend": "./scripts/kill-backend.sh",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:component": "playwright test --config=playwright.component.config.ts",
    "test:component:ui": "playwright test --config=playwright.component.config.ts --ui",
    "test:component:debug": "playwright test --config=playwright.component.config.ts --debug",
    "prepare": "husky install",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "clean": "rm -rf dist node_modules/.vite",
    "pre-commit": "npm run format && npm run lint:fix && npm run test:run",
    "lint-staged": "lint-staged",
    "dev:kurrentDB": "docker-compose up -d && npm run dev",
    "kurrentDB:start": "docker-compose up -d",
    "kurrentDB:stop": "docker-compose down",
    "kurrentDB:restart": "docker-compose restart",
    "kurrentDB:logs": "docker-compose logs -f kurrentdb",
    "kurrentDB:status": "docker-compose ps",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "dev:backend": "cd backend && concurrently \"npm run dev\" \"npm run dev:fastify\"",
    "dev:backend:test": "cd backend && npm run dev:test",
    "dev:backend:staging": "cd backend && npm run dev:staging",
    "dev:backend:production": "cd backend && npm run dev:production",
    "build:backend": "cd backend && npm run build",
    "build:backend:dev": "cd backend && npm run build:dev",
    "build:backend:test": "cd backend && npm run build:test",
    "build:backend:staging": "cd backend && npm run build:staging",
    "build:backend:production": "cd backend && npm run build:production",
    "start:backend": "cd backend && npm run start",
    "start:backend:dev": "cd backend && npm run start:dev",
    "start:backend:test": "cd backend && npm run start:test",
    "start:backend:staging": "cd backend && npm run start:staging",
    "start:backend:production": "cd backend && npm run start:production"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@kurrent/kurrentdb-client": "~1.0",
    "@primeuix/themes": "^1.2.3",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/vue-query": "^5.85.5",
    "@types/qrcode": "^1.5.5",
    "@walletconnect/modal": "^2.7.0",
    "@walletconnect/sign-client": "^2.21.8",
    "@walletconnect/types": "^2.21.8",
    "@walletconnect/utils": "^2.21.8",
    "@web3modal/standalone": "^2.4.1",
    "concurrently": "^9.2.1",
    "pinia": "^3.0.3",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.9",
    "qrcode": "^1.5.4",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-primeui": "^0.6.1",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "postcss-nesting": "^13.0.2",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write --ignore-path .prettierignore"
    ],
    "*.{json,css,md,html,scss,sass,less}": [
      "prettier --write --ignore-path .prettierignore"
    ]
  }
}
