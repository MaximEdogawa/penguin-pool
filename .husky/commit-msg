#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Conventional commit message format
# Format: <type>(<scope>): <description>
# Types: feat, fix, docs, style, refactor, test, chore, ci, build, perf, revert
# Example: feat(dashboard): add user balance display

commit_regex='^(feat|fix|docs|style|refactor|test|chore|ci|build|perf|revert)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "❌ Invalid commit message format!"
    echo "Please use conventional commit format:"
    echo "  <type>(<scope>): <description>"
    echo ""
    echo "Types: feat, fix, docs, style, refactor, test, chore, ci, build, perf, revert"
    echo "Example: feat(dashboard): add user balance display"
    echo ""
    echo "Your message: $(cat "$1")"
    exit 1
fi

echo "✅ Commit message format is valid!" 