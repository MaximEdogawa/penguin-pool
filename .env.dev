# Development Environment Configuration
NODE_ENV=development
VITE_APP_ENV=dev

# App Configuration
VITE_APP_NAME=Penguin-pool
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000
