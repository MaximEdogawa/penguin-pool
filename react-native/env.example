# React Native Environment Configuration
# Copy this file to .env.local and fill in your actual values
# This file should NEVER be committed to version control

# App Configuration
EXPO_PUBLIC_APP_NAME=Penguin Pool
EXPO_PUBLIC_APP_VERSION=1.0.0

# API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_API_RETRIES=3

# Blockchain Configuration
EXPO_PUBLIC_CHIA_NETWORK=testnet
EXPO_PUBLIC_CHIA_RPC_URL=https://testnet.chia.net
EXPO_PUBLIC_CHIA_EXPLORER_URL=https://testnet.spacescan.io
EXPO_PUBLIC_CHIA_CHAIN_ID=chia:testnet

# Wallet Connect Configuration
# Get your project ID from https://cloud.walletconnect.com/
EXPO_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_actual_wallet_connect_project_id_here
EXPO_PUBLIC_WALLET_CONNECT_RELAY_URL=wss://relay.walletconnect.com

# Dexie Configuration
EXPO_PUBLIC_DEXIE_BASE_URL=https://dexie.space

# KurrentDB Configuration
EXPO_PUBLIC_KURRENT_DB_ENABLED=true
EXPO_PUBLIC_KURRENT_DB_ENVIRONMENT=dev
EXPO_PUBLIC_KURRENT_DB_SYNC_INTERVAL=5000
EXPO_PUBLIC_KURRENT_DB_MAX_RETRIES=3
EXPO_PUBLIC_KURRENT_DB_TIMEOUT=30000

# KurrentDB API Keys
# These are required for KurrentDB functionality
# Get your API keys from your KurrentDB dashboard

# Development Environment
EXPO_PUBLIC_KURRENT_DB_DEV_API_KEY=your_dev_api_key_here
EXPO_PUBLIC_KURRENT_DB_DEV_SECRET_KEY=your_dev_secret_key_here

# Test Environment
EXPO_PUBLIC_KURRENT_DB_TEST_API_KEY=your_test_api_key_here
EXPO_PUBLIC_KURRENT_DB_TEST_SECRET_KEY=your_test_secret_key_here

# Staging Environment
EXPO_PUBLIC_KURRENT_DB_STAGING_API_KEY=your_staging_api_key_here
EXPO_PUBLIC_KURRENT_DB_STAGING_SECRET_KEY=your_staging_secret_key_here

# Production Environment
EXPO_PUBLIC_KURRENT_DB_MAINNET_API_KEY=your_mainnet_api_key_here
EXPO_PUBLIC_KURRENT_DB_MAINNET_SECRET_KEY=your_mainnet_secret_key_here

# Feature Flags
EXPO_PUBLIC_FEATURE_DARK_MODE=true
EXPO_PUBLIC_FEATURE_OFFLINE_MODE=true
EXPO_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_FEATURE_ANALYTICS=false

# Debug Configuration
# Enable debugging in production (set to 'true' to enable)
EXPO_PUBLIC_ENABLE_DEBUG=false
EXPO_PUBLIC_TANSTACK_DEBUG=false
