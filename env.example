# Penguin-pool Environment Configuration

# App Configuration
VITE_APP_NAME=Penguin-pool
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3

# Blockchain Configuration
VITE_CHIA_NETWORK=testnet
VITE_CHIA_RPC_URL=https://testnet.chia.net
VITE_CHIA_EXPLORER_URL=https://testnet.spacescan.io

# Dexie.space Configuration
VITE_DEXIE_BASE_URL=https://dexie.space

# Wallet Configuration
# VITE_WALLET_CONNECT_PROJECT_ID - Store in .env.local or CI/CD secrets
VITE_CHIA_CHAIN_ID=chia:testnet
VITE_WALLET_CONNECT_RELAY_URL=wss://relay.walletconnect.com

# Kurrent DB Configuration
VITE_KURRENT_DB_ENABLED=true
VITE_KURRENT_DB_ENVIRONMENT=dev
VITE_KURRENT_DB_SYNC_INTERVAL=5000
VITE_KURRENT_DB_MAX_RETRIES=3
VITE_KURRENT_DB_TIMEOUT=30000

# Kurrent DB API Keys
# Store these in .env.local for local development or CI/CD secrets for production
# See env.local.example for the required variables

# Feature Flags
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_PUSH_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=false

# PWA Configuration
VITE_PWA_NAME=Penguin-pool
VITE_PWA_SHORT_NAME=Penguin
VITE_PWA_DESCRIPTION=Decentralized lending platform
VITE_PWA_THEME_COLOR=#3b82f6
VITE_PWA_BACKGROUND_COLOR=#ffffff
